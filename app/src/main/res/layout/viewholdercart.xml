<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pizza1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.082" />

        <TextView
            android:id="@+id/titlee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="150dp"
            android:textSize="23sp"
            android:textStyle="bold"
            />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plumin"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="140dp"
        android:background="@drawable/checkout_background"
        >
        <ImageView
            android:id="@+id/minuss"
            app:layout_constraintTop_toTopOf="@id/plumin"
            app:layout_constraintBottom_toBottomOf="@id/plumin"
            app:layout_constraintStart_toStartOf="@id/plumin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minus"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/cirwhite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/white_circle"
            app:layout_constraintTop_toTopOf="@id/plumin"
            app:layout_constraintBottom_toBottomOf="@id/plumin"
            app:layout_constraintEnd_toEndOf="@id/plumin"
            app:layout_constraintStart_toStartOf="@id/plumin"
            />
            <TextView
                android:id="@+id/counternumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                app:layout_constraintStart_toStartOf="@+id/cirwhite"
                app:layout_constraintEnd_toEndOf="@id/cirwhite"
                app:layout_constraintBottom_toBottomOf="@id/cirwhite"
                app:layout_constraintTop_toTopOf="@id/cirwhite"
                />
        <ImageView
            android:id="@+id/pluss"
            app:layout_constraintTop_toTopOf="@id/plumin"
            app:layout_constraintBottom_toBottomOf="@id/plumin"
            app:layout_constraintEnd_toEndOf="@id/plumin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            android:layout_marginRight="15dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:id="@+id/cost1"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 pounds"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:id="@+id/cost2"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 pounds"
            android:textColor="@color/black"
            />
    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>