<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/bigger"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUpActivity"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    android:background="#0C0C0C"
    tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        app:layout_constraintTop_toTopOf="@id/bigger"
        app:layout_constraintEnd_toEndOf="@id/bigger"
        app:layout_constraintStart_toStartOf="@id/bigger"
        app:layout_constraintBottom_toBottomOf="@id/bigger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginRight="0sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginBottom="0dp"
                android:paddingEnd="-15sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:layout_marginRight="12dp"
                    android:layout_width="90dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="الكبابجي"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#F5F6F8"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:layout_marginBottom="20dp"
                    />
                <ImageView
                    android:layout_marginRight="15dp"

                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@drawable/flatware_24" />
                <TextView
                    android:layout_marginRight="-10sp"
                    android:layout_marginTop="15sp"
                    android:gravity="left"
                    android:fontFamily="sans-serif-black"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="قصر"
                    android:textColor="#F5F6F8"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="340sp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="340sp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#E1BC86"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10sp"
                >
                <TextView
                    android:layout_marginLeft="125dp"
                    android:layout_marginRight="125dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:drawableEnd="@drawable/account_circle_24"

                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="70dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#F6EEE1"
                    app:boxStrokeColor="#FF9800"
                    app:hintTextColor="#FF9800"
                    app:boxStrokeWidthFocused="3sp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawablePadding="15sp"
                        android:paddingStart="15sp"
                        android:hint="Emali"
                        android:inputType="textEmailAddress"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="145dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#F6EEE1"
                    app:boxStrokeColor="#FF9800"
                    app:hintTextColor="#FF9800"
                    app:boxStrokeWidthFocused="3sp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:endIconMode="password_toggle"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/sign_in_pass"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawablePadding="15sp"
                        android:paddingStart="15sp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/forgetpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="35dp"
                    android:text="Forget Password ?"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    android:textColor="#0B0B0A"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="135dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#755D3A"
                    android:text="LOGIN"
                    app:cornerRadius="10dp"
                    android:textStyle="bold"
                    android:textColor="#F8F7F5"
                    android:textAllCaps="false"
                    android:textSize="25dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/donthaveaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Don't hava an account ?"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                android:textColor="#3F51B5"
                />
            <TextView
                android:id="@+id/createaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="CREATE ACCOUNT NOW"
                android:textSize="21sp"
                android:textStyle="bold|italic"
                android:textColor="#FBFBFA"
                />
            <View
                android:layout_width="232sp"
                android:layout_height="2dp"
                android:background="#FF9800"
                android:layout_gravity="center"
                />
                <TextView
                    android:id="@+id/or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="OR LOGIN WITH"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    android:textColor="#E99BF6"
                    />
            <LinearLayout

                android:layout_gravity="center"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"
                    android:text="Google"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#792196F3"
                    />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:text="Facebook"
                    android:textSize="20dp"
                    android:backgroundTint="@color/white"
                    android:textColor="#792196F3"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Made by MSA Group"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#FCFDFD"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
