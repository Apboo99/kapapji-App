<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingsActivity"
    android:orientation="vertical"
    android:background="@color/black"
    >
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/exit1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/cancel_24"
            android:layout_gravity="center"
            android:paddingStart="15dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Setting"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:paddingEnd="40dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="40dp"
            app:cardCornerRadius="100dp"
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:scaleX="1.5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/moo"

                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:text="Mohamed Suliman"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:gravity="left|center"
            android:layout_marginStart="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Account"
            android:textColor="#FF9800"
            android:textSize="26sp"
            android:gravity="left|center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="left|center"
            android:drawableRight="@drawable/arrow_right_24"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Notification Settings"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="left|center"
            android:drawableRight="@drawable/arrow_right_24"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Connected Accounts "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="left|center"
            android:drawableRight="@drawable/arrow_right_24"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            />
        <View
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#454443"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="App Permissions"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="left|center"
            android:drawableRight="@drawable/arrow_right_24"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Payments Options"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="left|center"
            android:drawableRight="@drawable/arrow_right_24"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            />
        <View
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#454443"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="App"
            android:textColor="#FF9800"
            android:textSize="26sp"
            android:gravity="left|center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="About This App"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="left|center"
            android:drawableRight="@drawable/arrow_right_24"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            />
        <View
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#454443"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Share with friends"
            android:textColor="#F3F1EF"
            android:textSize="20sp"
            android:gravity="left|center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rate us on app store"
            android:textColor="#F3F1EF"
            android:textSize="20sp"
            android:gravity="left|center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            />
    </LinearLayout>


</LinearLayout>