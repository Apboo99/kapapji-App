<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/parentt"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IntroActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_intro1"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
         />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="أهلا بك في"
            android:gravity="center"
            android:layout_marginTop="110dp"
            app:layout_constraintTop_toTopOf="@+id/background"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/Qasr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="@string/name_of_logo"
            android:gravity="center"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            android:textStyle="bold"
            android:textColor="#2E2AB5"
            />

    <ImageView
        android:id="@+id/burger_logo"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:src="@drawable/burger"
        app:layout_constraintStart_toStartOf="@id/burger_logo"
        app:layout_constraintEnd_toEndOf="@id/burger_logo"
        app:layout_constraintTop_toBottomOf="@id/burger_logo"
        app:layout_constraintTop_toTopOf="@id/Qasr"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="60dp"

        />
        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="يومك هيكون أحلى معانا"
            android:textSize="35sp"
            android:textStyle="bold"
            android:letterSpacing=".2"
            app:layout_constraintTop_toBottomOf="@id/burger_logo"
            app:layout_constraintStart_toStartOf="@id/burger_logo"
            app:layout_constraintEnd_toEndOf="@id/burger_logo"
            app:layout_constraintBottom_toTopOf="@id/day2"
            android:gravity="center"
            android:textColor="#FAFAF7"
            />
        <TextView
            android:id="@+id/day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="وكل إلا نفسك فيه هتلاقيه"
            android:textColor="@color/black"
            android:letterSpacing=".1"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/day"
            app:layout_constraintStart_toStartOf="@id/day"
            app:layout_constraintEnd_toEndOf="@id/day"
            app:layout_constraintBottom_toTopOf="@id/getStarted"
            />

    <Button
        android:id="@+id/getStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_intro"
        android:paddingLeft="60dp"
        android:paddingTop="5dp"
        android:paddingRight="60dp"
        android:paddingBottom="5dp"
        android:text="Get Started"
        android:textColor="@color/purple_700"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/day2" />






</androidx.constraintlayout.widget.ConstraintLayout>