<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUpActivity"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    android:background="#0C0C0C"
    tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginTop="20sp"
            android:paddingEnd="-15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20sp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_width="90dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="الكبابجي"
                android:fontFamily="sans-serif-black"
                android:textColor="#F5F6F8"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"
                />
            <ImageView
                android:layout_marginRight="15dp"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/flatware_24" />
            <TextView
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp"
                android:gravity="left"
                android:fontFamily="sans-serif-black"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="قصر"
                android:textColor="#F5F6F8"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE YOUR ACCOUNT"
            android:textColor="#FF9800"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:layout_marginRight="65sp"
            android:layout_marginLeft="65sp"
            android:layout_marginBottom="20dp"
            android:drawableEnd="@drawable/account_circle_24"

            />

        <LinearLayout
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                app:cardElevation="30dp"
                app:cardMaxElevation="25dp"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="#E1BC86"
                android:layout_width="match_parent"
                android:layout_height="420sp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#F6EEE1"
                    app:boxStrokeColor="#090909"
                    app:hintTextColor="#FF9800"
                    app:boxStrokeWidthFocused="3sp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:drawablePadding="15sp"
                        android:paddingStart="15sp"
                        android:hint="Name"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="95dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#F6EEE1"
                    app:boxStrokeColor="#090909"
                    app:hintTextColor="#FF9800"
                    app:boxStrokeWidthFocused="3sp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15sp"
                        android:paddingStart="15sp"
                        android:hint="Emali"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="165dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#F6EEE1"
                    app:boxStrokeColor="#090909"
                    app:hintTextColor="#FF9800"
                    app:boxStrokeWidthFocused="3sp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:endIconMode="password_toggle"
                    >
                    <EditText
                        android:id="@+id/sign_up_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15sp"
                        android:paddingStart="15sp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="245dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#F6EEE1"
                    app:boxStrokeColor="#090909"
                    app:hintTextColor="#FF9800"
                    app:boxStrokeWidthFocused="3sp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:endIconMode="password_toggle"
                    >
                    <EditText

                        android:id="@+id/sign_up_passConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15sp"
                        android:paddingStart="15sp"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/alreadyaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginBottom="78dp"

                    android:layout_marginLeft="15dp"
                    android:text="Already have account ?"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/black"
                    />

                <com.google.android.material.button.MaterialButton
                    android:elevation="50dp"
                    android:id="@+id/btn_signup"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="170dp"
                    android:backgroundTint="#755D3A"
                    android:text="Sign Up"
                    android:textStyle="bold"
                    android:textColor="#F6F7FA"
                    android:textAllCaps="false"
                    app:cornerRadius="10dp"
                    android:textSize="27dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Or Sign By"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="monospace"
                />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="380dp"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="30dp"
                    android:text="Google"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#9EFF9800"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="20dp"
                    android:text="Facebook"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:textColor="#DDFF9800"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="18sp"
                android:text="Sign Up with Phone"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="0sp"
                android:text="Made by MSA Group"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#FCFDFD"
                />
        </LinearLayout>




    </LinearLayout>

</LinearLayout>